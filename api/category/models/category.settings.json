{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "category"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "categoryName": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 30,
      "minLength": 3
    },
    "categoryCoverPhoto": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "posts": {
      "via": "categories",
      "collection": "post"
    }
  }
}
